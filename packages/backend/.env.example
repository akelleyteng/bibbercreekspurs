# Server Configuration
NODE_ENV=development
PORT=4000

# Database (Local or Google Cloud SQL)
DATABASE_URL=postgresql://user:password@localhost:5432/4hclub
# For Cloud SQL: postgresql://user:password@/4hclub?host=/cloudsql/PROJECT:REGION:INSTANCE

# Redis (Local or Google Memorystore)
REDIS_URL=redis://localhost:6379

# JWT Secrets (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_ACCESS_SECRET=your-access-secret-here
JWT_REFRESH_SECRET=your-refresh-secret-here
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Google Cloud Platform
GCP_PROJECT_ID=your-gcp-project-id
GCP_STORAGE_BUCKET=4hclub-uploads
GOOGLE_APPLICATION_CREDENTIALS=./service-account-key.json

# Gmail API for sending emails
GMAIL_USER=noreply@bibbercreekspurs4h.org
GMAIL_CLIENT_ID=your-gmail-oauth-client-id
GMAIL_CLIENT_SECRET=your-gmail-oauth-client-secret
GMAIL_REFRESH_TOKEN=your-gmail-refresh-token

# Google APIs (Drive, Calendar)
GOOGLE_OAUTH_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-client-secret
GOOGLE_DRIVE_FOLDER_ID=your-shared-folder-id

# Facebook
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_PAGE_ID=your-page-id
FACEBOOK_PAGE_ACCESS_TOKEN=your-page-access-token

# Frontend URL
FRONTEND_URL=http://localhost:3000

# GraphQL
GRAPHQL_ENDPOINT=/graphql
GRAPHQL_PLAYGROUND=true

# Logging
LOG_LEVEL=info
